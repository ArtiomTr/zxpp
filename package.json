    "license": "MIT",
    "homepage": "https://github.com/ArtiomTr/zxpp#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ArtiomTr/zxpp.git"
    },
    "bugs": {
        "url": "https://github.com/ArtiomTr/zxpp/issues"
    },
    "devDependencies": {
        "@types/is-url": "^1.2.30",
        "@types/node": "^16.4.6",
        "aqu": "^0.4.3",
        "typescript": "^4.3.5"
    },
    "types": "./dist/zxpp.d.ts",
    "dependencies": {
        "@esbuild-plugins/node-resolve": "^0.1.4",
        "esbuild": "^0.25.0",

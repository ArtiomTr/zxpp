{
    "name": "zxpp",
    "version": "0.3.0",
    "description": "🦐 Extended zx",
    "main": "./dist/zxpp.mjs",
    "files": [
        "dist"
    ],
    "keywords": [
        "shell",
        "script",
        "zx"
    ],
    "bin": {
        "zxpp": "dist/zxpp.mjs"
    },
    "scripts": {
        "exec": "node ./dist/zxpp.mjs",
        "build": "aqu build",
        "start": "aqu watch",
        "lint": "eslint .",
        "lint:fix": "aqu lint --fix",

{
    "compilerOptions": {
        "target": "es6",
        "module": "es2020",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "lib": ["es5"],
        "noLib": false,
        "rootDir": ".",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "test", "example"]
}
